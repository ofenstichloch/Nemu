#!/bin/bash
/usr/bin/setupBird
echo $@
if [ -z "$3" ]
then
	if [ "$1" = "router" ]
	then
		if [ "$2" = "6" ]
		then
			/usr/bin/setupRadvd
		fi
		bird -f
	else
		tail -f /dev/null
	fi
else
	if [ "$1" = "router" ]
        then                  
                if [ "$2" = "6" ]
                then
                        /usr/bin/setupRadvd
                fi
		bird&
		eval $3 
        else             
                eval $3
        fi 
fi

